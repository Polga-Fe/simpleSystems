<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frota.menuPage">
    <children>
        <Label fx:id="label" text="Bem-vindo CAMY - CADASTRO AMBULANTE MINHA YSPERANÇA" textAlignment="CENTER" />
        <Button fx:id="registerButton" onAction="#switchToRegister" text="NOVO CAMINHÃO" textAlignment="CENTER" />
        <Button fx:id="showButton" onAction="#switchToShow" text="BASE DE CADASTROS" textAlignment="CENTER" />
        <Button fx:id="outButton" onAction="#exitGame" text="SAIR" textAlignment="CENTER" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
