<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frota.checkPage">
    <children>
        <TableView fx:id="tabelaCaminhoes">
            <columns>
                <TableColumn fx:id="colunaId" text="ID"/>
                <TableColumn fx:id="colunaTipo" text="Tipo"/>
                <TableColumn fx:id="colunaMarca" text="Marca"/>
                <TableColumn fx:id="colunaAno" text="Ano"/>
                <TableColumn fx:id="colunaValor" text="Valor"/>
                <TableColumn fx:id="colunaCarroceria" text="Carroceria (metros)"/>
                <TableColumn fx:id="colunaCarga" text="Carga"/>
            </columns>
        </TableView>
        <Button fx:id="deleteButton" text="Deletar" onAction="#deletarClick"/>
        <Button text="Voltar" onAction="#switchToMenu"/>
    </children>
    <padding>
        <Insets top="50" bottom="50" right="50" left="50"/>
    </padding>
</VBox>
